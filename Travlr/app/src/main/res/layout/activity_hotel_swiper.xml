<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.travlr.HotelSwiperActivity"
    android:background="#5ea2e9">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/swiper"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        app:rotation_degrees="16"
        app:max_visible="4"
        app:min_adapter_stack="2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/positive_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/ic_negative"
        app:backgroundTint="#ffffff"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/negative_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp"
        android:layout_alignTop="@+id/positive_fab"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/ic_positive"
        app:backgroundTint="#ffffff"
        />

</RelativeLayout>